<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="com.devepos.adt.abaptags.ui.general.commands.category"
            name="%catagory.abaptags.label">
      </category>
      <command
            categoryId="com.devepos.adt.abaptags.ui.general.commands.category"
            id="com.devepos.adt.abaptags.ui.command.manageTags"
            name="%command.manageTags.label">
         <commandParameter
               id="com.devepos.adt.abaptags.ui.commandParams.globalTags"
               name="%commandParams.globalTags"
               optional="true">
         </commandParameter>
      </command>
      <command
            categoryId="com.devepos.adt.abaptags.ui.general.commands.category"
            id="com.devepos.adt.abaptags.ui.command.tagSelectedObjects"
            name="%command.tagSelectedObjects.label">
      </command>
      <command
            categoryId="com.devepos.adt.abaptags.ui.general.commands.category"
            id="com.devepos.adt.abaptags.ui.command.tagObjects"
            name="%command.tagObjects.label">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.devepos.adt.abaptags.ui.internal.handlers.ManageTagsHandler"
            commandId="com.devepos.adt.abaptags.ui.command.manageTags">
      </handler>
      <handler
            class="com.devepos.adt.abaptags.ui.internal.handlers.AddTagsToSelectedObjectsHandler"
            commandId="com.devepos.adt.abaptags.ui.command.tagSelectedObjects">
      </handler>
      <handler
            class="com.devepos.adt.abaptags.ui.internal.handlers.AddTagsToObjectsHandler"
            commandId="com.devepos.adt.abaptags.ui.command.tagObjects">
      </handler>
    </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="com.devepos.adt.abaptags.ui"
               label="%toolbar.abaptags.label">
            <command
                  commandId="com.devepos.adt.abaptags.ui.command.manageTags"
                  icon="icons/Tag.png"
                  label="%command.manageGlobalTags.label"
                  style="pulldown">
               <parameter
                     name="com.devepos.adt.abaptags.ui.commandParams.globalTags"
                     value="true">
               </parameter>
               <visibleWhen
                     checkEnabled="false">
                  <reference
                        definitionId="com.sap.adt.tools.core.ui.toolsActive">
                  </reference>
               </visibleWhen>
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:com.devepos.adt.abaptags.ui.command.manageTags">
         <command
               commandId="com.devepos.adt.abaptags.ui.command.manageTags"
               icon="icons/Globe.png"
               label="%command.manageGlobalTags.label"
               mnemonic="g"
               style="push">
            <parameter
                  name="com.devepos.adt.abaptags.ui.commandParams.globalTags"
                  value="true">
            </parameter>
         </command>
         <command
               commandId="com.devepos.adt.abaptags.ui.command.manageTags"
               icon="icons/User.png"
               label="%command.manageUserTags.label"
               style="push">
            <parameter
                  name="com.devepos.adt.abaptags.ui.commandParams.globalTags"
                  value="false">
            </parameter>
         </command>
         <separator
               name="com.devepos.adt.abaptags.ui.separator1"
               visible="true">
         </separator>
         <command
               commandId="com.devepos.adt.abaptags.ui.command.tagObjects"
               icon="icons/Tag.png"
               label="%command.tagObjects.label"
               mnemonic="a"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu?endof=group.open">
         <command
               commandId="com.devepos.adt.abaptags.ui.command.tagSelectedObjects"
               icon="icons/Tag.png"
               label="%command.tagObjects.label"
               mnemonic="a"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <iterate
                        operator="and">
                     <adapt
                           type="com.devepos.adt.tools.base.adtobject.IAdtObject">
                        <test
                              property="com.devepos.adt.abaptags.ui.features.abaptagsAvailable">
                        </test>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:#EditorContext?after=group.open">
         <command
               commandId="com.devepos.adt.abaptags.ui.command.tagSelectedObjects"
               icon="icons/Tag.png"
               label="%command.tagObjects.label"
               mnemonic="a"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeEditorInput">
                  <adapt
                        type="com.devepos.adt.tools.base.adtobject.IAdtObject">
                     <test
                           property="com.devepos.adt.abaptags.ui.features.abaptagsAvailable">
                     </test>
                  </adapt>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="com.devepos.adt.abaptags.ui.internal.propertytester.FeatureTester"
            id="com.devepos.adt.abaptags.ui.ProjectFeatureTester"
            namespace="com.devepos.adt.abaptags.ui.features"
            properties="abaptagsAvailable"
            type="com.devepos.adt.tools.base.adtobject.IAdtObject">
      </propertyTester>
   </extension>

</plugin>
