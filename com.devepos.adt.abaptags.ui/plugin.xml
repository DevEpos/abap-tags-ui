<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="com.devepos.adt.abaptags.ui.general.commands.category"
            name="%catagory.abaptags.label">
      </category>
      <command
            categoryId="com.devepos.adt.abaptags.ui.general.commands.category"
            id="com.devepos.adt.abaptags.ui.command.manageTags"
            name="%command.manageTags.label">
         <commandParameter
               id="com.devepos.adt.abaptags.ui.commandParams.globalTags"
               name="%commandParams.globalTags"
               optional="true">
         </commandParameter>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.devepos.adt.abaptags.ui.internal.handlers.ManageTagsHandler"
            commandId="com.devepos.adt.abaptags.ui.command.manageTags">
      </handler>
    </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="com.devepos.adt.abaptags.ui"
               label="%toolbar.abaptags.label">
            <command
                  commandId="com.devepos.adt.abaptags.ui.command.manageTags"
                  icon="icons/tagDark.png"
                  label="%command.manageGlobalTags.label"
                  style="pulldown">
               <parameter
                     name="com.devepos.adt.abaptags.ui.commandParams.globalTags"
                     value="true">
               </parameter>
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:com.devepos.adt.abaptags.ui.command.manageTags">
         <command
               commandId="com.devepos.adt.abaptags.ui.command.manageTags"
               icon="icons/globe.png"
               label="%command.manageGlobalTags.label"
               style="push">
            <parameter
                  name="com.devepos.adt.abaptags.ui.commandParams.globalTags"
                  value="true">
            </parameter>
         </command>
         <command
               commandId="com.devepos.adt.abaptags.ui.command.manageTags"
               icon="icons/User.png"
               label="%command.manageUserTags.label"
               style="push">
            <parameter
                  name="com.devepos.adt.abaptags.ui.commandParams.globalTags"
                  value="false">
            </parameter>
         </command>
      </menuContribution>
   </extension>

</plugin>
